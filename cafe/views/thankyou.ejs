<%- include('header.ejs') %>
<body class="bg-gray-100 font-[Poppins] min-h-screen">
  <div class="max-w-4xl mx-auto p-6">
    <div class="bg-gray-700 rounded-2xl shadow-2xl p-8 md:p-12 text-center">
      <!-- Checkmark Icon -->
      <div
        class="mx-auto w-20 h-20 bg-green-400 rounded-full flex items-center justify-center mb-6"
      >
        <svg
          class="w-12 h-12 text-gray-700"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 13l4 4L19 7"
          ></path>
        </svg>
      </div>

      <!-- Main Content -->
      <h1 class="text-amber-400 text-3xl md:text-4xl font-bold mb-4">
        Thank You!
      </h1>
      <p class="text-gray-300 mb-8 text-lg">
        Your order has been successfully placed.
      </p>

      <!-- Order Summary -->
      <div class="bg-gray-800 rounded-xl p-6 mb-8 text-left">
        <h2 class="text-amber-400 text-xl font-semibold mb-4">Order Details</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-300">
          <div>
            <p><span class="text-amber-400">Order ID:</span> #<%= orderDetail.order_id %></p>
            <p><span class="text-amber-400">UUID:</span><%= orderDetail.uuid %></p>
          </div>
          <div>
            <p><span class="text-amber-400">Items:</span> 1 product</p>
            <p><span class="text-amber-400">Total:</span> PKR <%= orderDetail.total %>/-</p>
          </div>
        </div>
      </div>

      <!-- Next Steps -->
      <div class="mb-8">
        <h3 class="text-amber-400 text-xl font-semibold mb-4">What's Next?</h3>
        <ol class="text-gray-300 space-y-2 text-left max-w-md mx-auto">
          <li class="flex items-center">
            <span class="text-amber-400 mr-2">1.</span> Order processing
          </li>
          <li class="flex items-center">
            <span class="text-amber-400 mr-2">2.</span> Shipping updates via
            email
          </li>
          <li class="flex items-center">
            <span class="text-amber-400 mr-2">3.</span> Delivery within 3-5 days
          </li>
        </ol>
      </div>

      <!-- Action Button -->
      <a
        href="/dashboard"
        class="inline-block bg-amber-400 text-gray-700 px-8 py-3 rounded-full font-semibold hover:bg-amber-300 transition-colors"
      >
        See Dashboard
      </a>
    </div>
  </div>
</body>
<%- include('footer.ejs') %>
